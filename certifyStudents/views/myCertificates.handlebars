<div class="row">
    {{#each certificates}}
        <div class="col-sm-6">
            <div class="card shadow mb-3 p-3 bg-body rounded border-0" id={{_id}}>
                <h5 class="card-title">{{courseName}}</h5>
                <div class="card-body">
                    <p class="card-text">ID de la credencial: {{ _id }}</p>
                    <a class="card-text" href="http://localhost:3001/verify/{{_id}}">URL de la credencial: </a>
                    <p class="card-text">{{ completedTasks }} tareas completadas</p>
                    <p class="card-text">Fecha de emisi√≥n: {{ dateOfIssue }}</p>
                    <a class="btn btn-outline-primary" href="/student/downloadCertificate/{{_id}}">Descargar PDF</a>
                </div>
            </div>
        </div>
    {{/each}}
</div>